<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view_profile_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        tools:context=".profileDetails">

        <ImageView
            android:id="@+id/chosen_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <android.support.v7.widget.CardView
            android:id="@+id/detail_card_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chosen_picture"
            app:layout_constraintWidth_percent="0.9">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/card_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/name_profile_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/man_user"
                    android:drawableTint="#002fff"
                    android:paddingBottom="5dp"
                    android:paddingEnd="0dp"
                    android:paddingStart="10dp"
                    android:text="First Last"
                    android:textSize="22sp"


                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name_profile_detail" />

                <TextView
                    android:id="@+id/phone_profile_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/call_answer"
                    android:drawableTint="#002fff"
                    android:paddingBottom="5dp"
                    android:paddingEnd="0dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:text="Phone #"
                    android:textSize="22sp"
                    app:layout_constraintTop_toBottomOf="@id/name_profile_detail"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/phone_profile_detail" />

                <TextView
                    android:id="@+id/email_profile_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/mail"
                    android:drawableTint="#002fff"
                    android:paddingBottom="5dp"
                    android:paddingEnd="0dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:text="Email"
                    android:textSize="22sp"
                    app:layout_constraintTop_toBottomOf="@+id/phone_profile_detail"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/email_profile_detail" />

                <TextView
                    android:id="@+id/company_profile_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/factory"
                    android:drawableTint="#002fff"
                    android:paddingBottom="5dp"
                    android:paddingEnd="0dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:text="Company"
                    android:textSize="22sp"
                    app:layout_constraintTop_toBottomOf="@id/email_profile_detail"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/company_profile_detail" />

                <TextView
                    android:id="@+id/profession_profile_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/briefcase"
                    android:drawableTint="#002fff"
                    android:paddingBottom="5dp"
                    android:paddingEnd="0dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:text="Profession"
                    android:textSize="22sp"
                    app:layout_constraintTop_toBottomOf="@id/company_profile_detail" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profession_profile_detail" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>


        <com.google.android.gms.maps.MapView
            android:id="@+id/coordinates_profile_detail"
            android:layout_width="0dp"
            android:layout_height="300dp"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_card_top"
            app:layout_constraintWidth_percent="0.9 "

            />

    </android.support.constraint.ConstraintLayout>

</ScrollView>